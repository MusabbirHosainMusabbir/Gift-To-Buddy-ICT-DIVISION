<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="@drawable/layout_bg"
    android:weightSum="3"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/favourites"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp"
                    android:layout_width="25dp"
                    android:layout_height="40dp"
                    android:src="@drawable/heart" />






        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1.4"
        android:weightSum="3"
        android:orientation="vertical"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_weight="0.7"
            android:textColor="@color/textcolorprofileuser"
            android:layout_height="0dp"
            android:text="Wedding Dreses"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2">
            <TextView
                android:id="@+id/idvalue"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/location"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:textAlignment="viewStart"
                android:textColor="@color/customcolor"
                android:layout_height="match_parent"
                android:text="Rampura,Dhaka"
                android:gravity="start" />

            <com.arena.gifttobuddy.customfonts.MyTextView_SF_Pro_Display_Regular
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:textAlignment="center"
                android:text="â€Ž2 minutes"
                android:textColor="@color/time"
                android:gravity="start"
                tools:ignore="RtlCompat" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"/>

    </LinearLayout>



</LinearLayout>
